@{
    Layout = null;
}

@model RentItMvc.Models.Audio

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>AudioPlayer</title>
        <script type="text/javascript" src="~/Scripts/custom.js"></script>
        <script type="text/javascript" src="~/Scripts/jquery-1.9.1.js"></script>
    </head>
    <body onload="initPlayer(@Model.Ogg, @Model.Mp3)">
        

        <div>
            <h2>AudioPlayer</h2>
            <audio id="player" preload="auto">
                <source id="ogg" src="" type="audio/ogg" />
                <source id="mp3" src="" type="audio/mpeg"/>
            </audio>
            <div id="controls">
                <div id="playStop" class="pull-left" onclick="playAudio()">
                    <i id="playIcon" class="icon-play icon-white"></i>
                </div>
                <div id="slider" class="pull-left">
                    <i id="down" class="icon-volume-down icon-white"></i>
                    <input id="slide" type="range" min="0.0" max="1.0" step="0.01" value="0.5" onchange="updateSlider(this.value)"/>
                    <i id="up" class="icon-volume-up icon-white"></i>
                </div>
            </div>
        </div>
    </body>
</html>