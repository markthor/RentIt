@using System.Web.Optimization

@{
    ViewBag.Title = "BlobFish Radio";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/our-custom.css" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner"  style="height: 46px">
            <div class="container">
                <a class="brand" href="/" title="Home">@ViewBag.Title</a>
                @Html.Partial("LogInTopBar")
            </div>
        </div>
    </div>
    <div style="clear:both"></div>
    <div class="container" style="margin-top: 46px">
        @RenderBody()
    </div>
    <div style="clear:both"/>
    <footer>
        <p>&copy; @ViewBag.Title @System.DateTime.Now.ToString("yyyy")</p>
    </footer>
    @Scripts.Render("~/js")
    @RenderSection("Scripts", required: false)
</body>
</html>
