@using System.Web.Optimization

@{
    ViewBag.Title = "BlobFish Radio";
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewBag.Title</title>
        <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" />
        <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-responsive.css" />
        <link rel="stylesheet" type="text/css" href="~/Content/our-custom.css" />
        <style type="text/css">
            body {
                
                margin-top: 60px;
                margin-bottom: 40px;
            }
        </style>
    </head>
    <body>
        <div class="navbar navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container">
                        @Html.Action("Topbar", "Shared")    
                    </div>
                </div>
            </div>
        <div class="container">
            @RenderBody()
        </div>

        <div class="footer">
            <div class="container">
                &copy; @ViewBag.Title @System.DateTime.Now.ToString("yyyy")
            </div>
        </div>

        
        @Scripts.Render("~/js")
        @RenderSection("Scripts", required: false)
    </body>
</html>