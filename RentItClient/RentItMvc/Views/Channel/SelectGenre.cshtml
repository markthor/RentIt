@using RentItMvc.Models;

@model Tuple<List<GuiGenre>, List<GuiGenre>, int>

<div id="genreDiv">
    @Html.ListBoxFor(model => model.Item1, new MultiSelectList(Model.Item1, "Id", "Name"), new { size = "10" })
    
    <input id="btnAddAll" type="button" value=" >> " onclick="addallItems();" />
    <input id="btnAdd" type="button" value=" > " onclick="addItem();" />
    <input id="btnRemove" type="button" value=" < "  onclick="removeItem();" />
    <input id="btnRemoveAll"type="button" value=" << "  onclick="removeallItems();" />

    @Html.ListBoxFor(model => model.Item2, new MultiSelectList(Model.Item2, "Id", "Name"), new { size = "10" })
</div>

<script type="text/javascript">
    function addItem() {
        $("#Item1 option:selected").appendTo("#Item2");
        $("#Item2 option").attr("selected", false);
    }
    function addallItems() {
        $("#Item1 option").appendTo("#Item2");
        $("#Item2 option").attr("selected", false);
    }
    function removeItem() {
        $("#Item2 option:selected").appendTo("#Item1");
        $("#Item1 option").attr("selected", false);
    }
    function removeallItems() {
        $("#Item2 option").appendTo("#Item1");
        $("#Item1 option").attr("selected", false);
    }
</script>