@{
    ViewBag.Title = "ChannelList";
}

@model List<RentItMvc.Models.Channel>

<h1>List of channels</h1>
<div class="row-fluid"> 
        <table class="table table-hover">
            <tr>  
                <th>Name</th>  
                <th>Description</th>  
                <th>Rating</th>  
                <th>Hits</th>  
              </tr> 
            @foreach (var p in Model)
            {
                <tr onclick="location.href ='@(Url.Action("SelectChannel", "Home", new { userId = p.Id }))'">
                    <td>
                        @p.Name
                    </td>
                    <td>
                        @p.Description
                    </td>  
                    <td>
                        @p.Rating
                    </td>  
                    <td>
                        @p.Hits
                    </td> 
                    <td>
                        <a class="btn" href="/Home/Main">
                            <i class="icon-play"></i>
                        </a>
                    </td> 
                </tr>
            }
            
        </table>
</div>
